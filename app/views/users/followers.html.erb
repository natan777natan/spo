<div class="gradation">
    <div class="container">
        <br>
        <h1>User followers!</h1>

        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                <% i = 0 %>
                <% @users.each_with_index do |user, i| %>
                <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td>
                        <p><%= link_to user.name, user_path(user.id) %>さん</p>
                    </td>
                    <td>
                        <% if current_user != user %>
                        <% if user.followed_by?(current_user) %>
                        <p><%=link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
                        </p>
                        <% else %>
                        <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
                        </p>
                    </td>
                </tr>
                <% end %>
                <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


